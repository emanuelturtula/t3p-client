{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build udp functions",
            "command": "/bin/g++",
            "args": [
                "-g",
                "${workspaceFolder}/cpp/*.cpp",
                "-o",
                "${workspaceFolder}/debug/debug_udp.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /bin/g++"
        }
    ]
}
